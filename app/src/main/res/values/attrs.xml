<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 标题属性 -->
    <declare-styleable name="TitleView">
        <attr name="title_name" format="reference|string"></attr>
        <attr name="title_left_text" format="reference|string"></attr>
        <attr name="title_left_image" format="reference"></attr>
        <attr name="title_right_visiable" format="boolean"></attr>
        <attr name="title_name_gravity">
            <enum name="left" value="3"></enum>
            <enum name="center" value="17"></enum>
            <enum name="right" value="5"></enum>
        </attr>
        <attr name="title_left_back" format="boolean"></attr>
        <attr name="title_right_image" format="reference"></attr>
        <attr name="title_right_text" format="reference|string"></attr>
        <attr name="title_right_image_two" format="reference"></attr>
        <attr name="title_right_text_two" format="reference|string"></attr>
        <attr name="title_height" format="dimension"></attr>
        <attr name="background_color" format="color"></attr>

    </declare-styleable>


    <declare-styleable name="RadarView">
        <attr name="spider_color" format="color"></attr>
        <attr name="max_value" format="integer"></attr>
        <attr name="cover_color" format="color"></attr>
        <attr name="text_color" format="color"></attr>

    </declare-styleable>

    <declare-styleable name="NoticeView">
        <attr name="noticeTextSize" format="dimension"/>
        <attr name="noticeTextColor" format="color|reference"/>
    </declare-styleable>



    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">true</item>       <!--是否有标题-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
    </style>


</resources>